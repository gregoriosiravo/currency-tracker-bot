{
  "compilerOptions": {
    "outDir": "./dist",     
    "rootDir": "./src",        
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],   
  "exclude": ["node_modules"]  
}
